@page "/Activity"

<h3>Fun Activities to Do in the City</h3>

<p>Here are some exciting activities you can enjoy in the city:</p>

<table class="table">
    <thead>
        <tr>
            <th>Activity</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in activities)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<ActivityInfo> activities = new List<ActivityInfo>
    {
        new ActivityInfo { Name = "Hiking", Description = "Explore scenic trails and enjoy the great outdoors." },
        new ActivityInfo { Name = "Snorkeling", Description = "Discover underwater beauty and marine life." },
        new ActivityInfo { Name = "City Tour", Description = "Experience the culture and landmarks of the city." },
        new ActivityInfo { Name = "Museum Visit", Description = "Learn about history and art at local museums." },
        new ActivityInfo { Name = "Wine Tasting", Description = "Enjoy tasting a variety of local wines." },
        new ActivityInfo { Name = "Boat Ride", Description = "Relax and enjoy a peaceful boat ride on the water." }
    };

    private class ActivityInfo
    {
        public string Name { get; set; }
        public string Description { get; set; }
    }
}
