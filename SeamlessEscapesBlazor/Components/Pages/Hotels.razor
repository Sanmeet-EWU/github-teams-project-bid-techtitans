@page "/hotels"

<h3>Available Hotels</h3>

<p>Here is a list of hotels available in the city:</p>

<table class="table">
    <thead>
        <tr>
            <th>Hotel Name</th>
            <th>Rate Per Night</th>
            <th>Specialties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in hotels)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.RatePerNight</td>
                <td>@hotel.Specialties</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Hotel> hotels = new List<Hotel>
    {
        new Hotel { Name = "Hotel Sunshine", RatePerNight = "$120", Specialties = "Free breakfast, Pool, Gym" },
        new Hotel { Name = "Grand Palace Hotel", RatePerNight = "$200", Specialties = "Spa, Luxury rooms, Gourmet restaurant" },
        new Hotel { Name = "Oceanview Resort", RatePerNight = "$150", Specialties = "Beach access, Water sports" },
        new Hotel { Name = "Mountain Peak Inn", RatePerNight = "$100", Specialties = "Mountain views, Pet-friendly" },
        new Hotel { Name = "City Center Hotel", RatePerNight = "$130", Specialties = "Central location, Business center" },
        new Hotel { Name = "Lakeside Lodge", RatePerNight = "$110", Specialties = "Lakeside views" },
        new Hotel { Name = "Heritage Hotel", RatePerNight = "$140", Specialties = "Historic building, Cultural tours, Fine dining" }
    };

    private class Hotel
    {
        public string Name { get; set; }
        public string RatePerNight { get; set; }
        public string Specialties { get; set; }
    }
}
