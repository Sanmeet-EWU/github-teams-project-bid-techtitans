@page "/about-us"

<style>
    .about-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        padding: 20px;
    }

    .developer-card {
        width: 18rem;
        margin: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.2s;
        background-color: rgba(255, 255, 255, 0.7); /* Semi-transparent background */
        border-radius: 8px; /* Optional: adds rounded corners */
    }

        .developer-card:hover {
            transform: scale(1.05);
        }

    .card-body {
        text-align: center;
    }

    .card-img-top {
        width: 100%;
        height: 250px;
        aspect-ratio: 16/9; /* Keep a consistent aspect ratio */
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">About Us</h2>
    <div class="about-container">
        @foreach (var developer in Developers)
        {
            <div class="card developer-card">
                <img src="@developer.ImageUrl" class="card-img-top" alt="@developer.Name" />
                <div class="card-body">
                    <h5 class="card-title">@developer.Name</h5>
                    <p class="card-text">@developer.Role</p>
                    <p class="card-text">@developer.Description</p>
                </div>
            </div>
        }
    </div>
</div>

